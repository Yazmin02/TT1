<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barra de menú (Toolbar) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Gestión de tiempo"
            app:titleTextColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:contentInsetStart="0dp"
            android:contentInsetEnd="0dp"
            app:navigationIcon="@drawable/ic_menu"
        />

        <!-- Título -->
        <TextView
            android:id="@+id/titulo_text_view"
            android:layout_width="326dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/aplicaci_n_de_gesti_n_de_tiempo"
            android:textColor="#002E6D"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/calendar_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <!-- Imagen de calendario -->
        <ImageView
            android:id="@+id/calendar_image_view"
            android:layout_width="0dp"
            android:layout_height="393dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_logo"
            app:layout_constraintTop_toBottomOf="@id/titulo_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Tareas Pendientes -->
        <TextView
            android:id="@+id/tarea_pendiente_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tarea_pendiente"
            android:textSize="30sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/calendar_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Evento Pendiente -->
        <TextView
            android:id="@+id/evento_pendiente_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evento_pendiente"
            android:textSize="30sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/tarea_pendiente_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú lateral (NavigationView) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
